  "author": "Alex Benson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pollychrome/joan-mcp.git"
  },
  "homepage": "https://github.com/pollychrome/joan-mcp#readme",
  "bugs": {
    "url": "https://github.com/pollychrome/joan-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin"

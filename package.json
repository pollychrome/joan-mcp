{
  "name": "@pollychrome/joan-mcp",
  "version": "1.0.2",
  "description": "MCP server for Joan productivity app - enables AI assistants to manage projects, tasks, goals, milestones, and notes",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "joan-mcp": "./bin/joan-mcp"
  },
  "scripts": {
    "build": "tsc",
